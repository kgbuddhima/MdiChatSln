<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MdiChat.View.HelpAndSupportPage"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             Title="Help And Support">
    <ScrollView>
        <StackLayout Padding="10">
            <BoxView HeightRequest="40" Color="Transparent"/>
            <ffimageloading:CachedImage HorizontalOptions="Center"
			HeightRequest="200"
			DownsampleToViewSize="true"
			Source = "Help2.png">
            </ffimageloading:CachedImage>
            <BoxView HeightRequest="20" Color="Transparent"/>
            <Label Text="To Get Support Go To :"  Style="{DynamicResource labelStyleHeadingLargeCenterGray}" TextColor="Gray" />
            <Label Text="MDi Chat Support Page" Style="{DynamicResource labelStyleHeadingLargeCenter}"/>
        </StackLayout>
    </ScrollView>
</ContentPage>